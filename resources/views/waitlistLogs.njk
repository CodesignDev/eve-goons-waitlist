{% include "./partials/header.njk" -%}
{% include "./partials/nav.njk" %}
<!-- Page Content -->
<div class="page-content {{ "active" if userProfile.settings.smSideNav == true }}">
<div class="page-header">
    <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Waitlist Logs</h2>
    </div>
</div>
<section class="no-padding-top padding-bottom">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="statistic-block block">
                    <table id="waitlistLog" class="table-striped" style="width:100%">
                        <thead class="noselect">
                            <tr>
                                <th>Pilot</th>
                                <th>Action</th>
                                <th>Admin</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for log in logData %}
                            <tr>
                                <td><a href="javascript:void(0);" onclick="showInfo({{ log.pilot.characterID }})">{{ log.pilot.name }}</a></td>
                                <td><span class="badge badge-log badge-{{ log.class }} noselect">{{ log.action }}</span></td>
                                <td><a href="javascript:void(0);" onclick="showInfo({{ log.admin.characterID }})">{{ log.admin.name }}</a></td>
                                <td>{{ log.time }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>         
                </div>
            </div>
        </div>
    </div>
</section>
