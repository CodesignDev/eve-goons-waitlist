<tr id="row-{{ user._id }}" class="{{ user.invited }}">
	<td>
		<img src="https://image.eveonline.com/Character/{{ user.user.characterID }}_64.jpg" style="height:75%" alt="avatar"> 
	</td>
	<td>
		<a href="javascript:void(0);" onclick="showInfo({{ user.user.characterID }})">{{ user.user.name }}</a>
		<p id="{{ user.user.characterID }}-status"></p>
	</td>
	<td>
		<button class="btn btn-sm btn-success {{ "" if fleet.fc.characterID else "disabled" }}" title="Invite Pilot" onclick="invitePilot('{{ user.user.characterID }}','{{ user._id }}');"><i class="fa fa-plus"></i></button>
	</td>
	<td>
		<div class="dropdown">
			<button class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button"><i class="fas fa-caret-circle-down" style="margin-right:-50%"></i></button>
			<div class="dropdown-menu" role="menu">
				<a class="dropdown-item" href="/commander/{{ user.user.name | replace(' ','-') }}/info">View Pilot Profile</a>
				<a class="dropdown-item" href="/commander/{{ user.user.name | replace(' ','-') }}/skills">View Pilot Skills</a>
			</div>
		</div>
	</td>
	<td>
		<button class="btn btn-sm" title="Browser Alarm" onclick="alarmUser('{{ user.user.characterID }}','{{ fleet.id }}','{{ user._id }}')"><i class="fa fa-bell"></i></button>
	</td>
	<td>
		<button class="btn btn-danger btn-sm" onclick="removePilot('{{ user._id }}','{{ user.user.characterID }}')" title="Remove from Waitlist"><i class="fa fa-minus"></i></button>
	</td>
	<td>
		<a href="#">
			<!--<img src="https://image.eveonline.com/Render/17740_32.png" title="Machariel" alt="Machariel">-->{{ user.ship }}
		</a>
	</td>
	<td><a href="javascript:void(0);" onclick="setWaypoint({{ user.user.location.id }})">{{ user.user.location.name }}</a></td>
	<td>{{ user.signupTime }}</td>
</tr>